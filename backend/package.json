{
  "name": "smart-budget-backend",
  "version": "1.0.0",
  "description": "Backend services for Smart Budget Management System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:user\" \"npm run dev:budget\" \"npm run dev:document\" \"npm run dev:notification\" \"npm run dev:analytics\"",
    "dev:gateway": "cd services/api-gateway && npm run dev",
    "dev:user": "cd services/user-service && npm run dev",
    "dev:budget": "cd services/budget-service && npm run dev",
    "dev:document": "cd services/document-service && npm run dev",
    "dev:notification": "cd services/notification-service && npm run dev",
    "dev:analytics": "cd services/analytics-service && npm run dev",
    "build": "npm run build:shared && npm run build:services",
    "build:shared": "cd shared && npm run build",
    "build:services": "concurrently \"npm run build:gateway\" \"npm run build:user\" \"npm run build:budget\" \"npm run build:document\" \"npm run build:notification\" \"npm run build:analytics\"",
    "build:gateway": "cd services/api-gateway && npm run build",
    "build:user": "cd services/user-service && npm run build",
    "build:budget": "cd services/budget-service && npm run build",
    "build:document": "cd services/document-service && npm run build",
    "build:notification": "cd services/notification-service && npm run build",
    "build:analytics": "cd services/analytics-service && npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "migrate": "cd shared && npm run migrate",
    "seed": "cd shared && npm run seed",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "bull": "^4.12.2",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1490.0",
    "socket.io": "^4.7.4",
    "nodemailer": "^6.9.7",
    "firebase-admin": "^11.11.1",
    "tesseract.js": "^5.0.2",
    "sharp": "^0.32.6",
    "pdf-parse": "^1.1.1",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "node-cron": "^3.0.3",
    "prom-client": "^15.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "budget-management",
    "educational-institutions",
    "microservices",
    "nodejs",
    "express",
    "postgresql",
    "redis"
  ],
  "author": "Smart Budget Development Team",
  "license": "MIT"
}